            android:src="@drawable/gray_circle" />

        <ImageView
            android:id="@+id/img_page3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/gray_circle" />

        <ImageView
            android:id="@+id/img_page4"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/gray_circle" />

    </LinearLayout>

    <Button
        android:id="@+id/start_button"
        android:layout_width="327dp"
